@model IEnumerable<TeamProjectIAN6.Models.Restaurant>
@{
    ViewBag.Title = "MyBusinesses";
}


<h2>My Businesses</h2>

<ul class="businesses">
    @foreach (var business in Model)
    {
        <li>
            <div class="details">
                <span>
                    @business.Name
                </span>
                <span>
                    @business.Category
                </span>
                <div class="actions">
                    <a href="#">Edit</a> |
                    <a href="#" class="js-delete-business" data-business-id="@business.ID">Delete</a>
                </div>
            </div>
        </li>
    }
</ul>

